{
  "name": "advent-of-code",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "test": "jest",
    "tdd": "jest --watchAll",
    "setup": "node ./setup.js",
    "readme": "node ./update-readme.js",
    "bench": "node ./bench.js",
    "format": "prettier . --write --ignore-unknown"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 160,
    "trailingComma": "es5",
    "arrowParens": "always",
    "tabWidth": 2,
    "useTabs": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true
  },
  "keywords": [],
  "author": "Robin Malfait <malfait.robin@gmail.com>",
  "license": "MIT",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/templates/"
    ],
    "projects": [
      "<rootDir>/src/*"
    ],
    "transform": {
      "\\.(t|j)sx?$": "@swc/jest"
    }
  },
  "devDependencies": {
    "@swc/core": "^1.3.21",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "cheerio": "1.0.0-rc.12",
    "cli-table": "^0.3.11",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "pretty-ms": "^8.0.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "date-fns": "^2.30.0"
  }
}
